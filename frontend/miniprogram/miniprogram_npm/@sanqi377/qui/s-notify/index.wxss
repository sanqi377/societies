.s-message {
  display: block;
  width: 100%;
  min-height: 32px;
  line-height: 2.3;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #2d8cf0;
  color: #fff;
  text-align: center;
  font-size: 14px;
  z-index: 1010;
  opacity: 0;
  transition: all .4s ease-in-out
}

.s-message-show {
  opacity: 1
}

.default {
  background: #2d8cf0
}

.success {
  background: #19be6b
}

.warning {
  background: #f90
}

.error {
  background: #ed3f14
}