.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .7);
  z-index: 999;
}

.container {
  width: 80%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
}

.content {
  background: #fff;
  border-radius: 20px;
  padding: 15px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .main {
  font-size: 14px;
  color: #646566;
}

.content>view {
  margin-bottom: 10px;
}

.content>view:last-child {
  margin-bottom: 0;
}

.content .btns {
  border-top: 1px solid #ccc;
  padding-top: 10px;
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.btns .enter {
  color: #1082ff;
}