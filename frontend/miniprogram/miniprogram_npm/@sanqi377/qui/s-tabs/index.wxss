.container {
  display: flex;
  margin-bottom: 10px;
  background: #fff;
}

.title {
  display: flex;
  flex: 1;
}

.left .title {
  width: 20% !important;
  flex-direction: column;
  flex: inherit;
  background: #f7f8fa;
}

.item {
  display: flex;
  flex: 1;
  justify-content: center;
  font-size: 14px;
  padding: 12px 0;
  position: relative;
}

.left .title .active::after {
  content: "";
  width: 4px;
  height: 50%;
  position: absolute;
  bottom: 0;
  left: 10px;
  transform: translateY(-50%);
  background: red;
  border-radius: 4px;
}

.title .active::after {
  content: "";
  width: 25%;
  height: 4px;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background: red;
  border-radius: 4px;
}

.leftItem {
  font-size: 14px;
  padding: 12px 0;
  margin: 0 10px;
}