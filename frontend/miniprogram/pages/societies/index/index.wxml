<view class="header">
</view>
<view class="tabs">
  <s-tabs active="{{1}}">
    <s-tab title="关注">关注</s-tab>
    <s-tab title="推荐">
      <view class="dynamic-card" wx:for="{{list}}" wx:key="item">
        <view class="head">
          <view class="info">
            <view class="avatar">
              <image src="{{item.avatar}}" />
            </view>
            <view>
              <view class="name">{{item.name}}</view>
              <view class="date">{{item.create_time}}</view>
            </view>
          </view>
          <view class="more">
            <image src="../../../public/icon/more.png" />
          </view>
        </view>
        <view class="main">{{item.value}}</view>
        <view class="btns">
          <view class="share">
            <image src="../../../public/icon/card-share.png" />
            <view>分享</view>
          </view>
          <view class="comment">
            <image src="../../../public/icon/card-comment.png" />
            <view>评论</view>
          </view>
          <view class="praise">
            <image src="../../../public/icon/card-praise.png" />
            <view>点赞</view>
          </view>
        </view>
      </view>
    </s-tab>
    <s-tab title="社团">社团</s-tab>
  </s-tabs>
</view>
<view class="publish" bindtap="goPublish">
  <view>
    <image src="../../../public/icon/publish.png" />
  </view>
</view>
<loading show="{{show}}" />