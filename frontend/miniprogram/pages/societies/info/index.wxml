    <view class="name">社团成员</view>
    <view class="more">
      <span>查看更多</span>
      <image src="../../../public/icon/more.png"></image>
    </view>
  </view>
  <view class="group">
    <view class="user" wx:for="{{5}}">
      <image src="../../../public/head_pic/avatar.jpg"></image>
      <view class="name">叁柒</view>
    </view>
  </view>
</view>
