<view class="container">
  <view class="head">
    <view class="back" bindtap="back">
      <image src="../../../public/icon/back.png"></image>
    </view>
  </view>
  <view class="bg">
    <image src="../../../public/img/bg.jpg"></image>
  </view>
  <view class="info">
    <view class="logo">
      <image src="../../../public/head_pic/avatar.jpg" />
    </view>
    <view class="dsc">
      <view class="title">{{info.name}}</view>
      <view class="department">简介：{{info.about}}</view>
    </view>
  </view>
  <view class="fan">
    <view class="count">{{info.number?info.number:0}} 成员 · 2 条内容</view>
    <view class="fans">
      <view class="gz">关注</view>
      <view class="share">
        <image src="../../../public/image/share.png" />
      </view>
    </view>
  </view>
</view>
<view class="main">
