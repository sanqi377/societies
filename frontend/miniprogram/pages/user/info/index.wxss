.container {
  padding-top: 55px;
  margin: 0 15px;
}

.head {
  display: flex;
  justify-content: space-between;
  color: #fff;
}

.head image {
  width: 16px;
  height: 16px;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
  height: 275px;
}

.bg image {
  width: 100%;
  height: 275px;
}

.userInfo {
  margin-top: 30px;
  margin-bottom: 25px;
}

.userInfo .avatar {
  margin-bottom: 10px;
}

.userInfo .avatar image {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  border: 3px solid #fff;
}

.userInfo .info {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.userInfo .info .name {
  color: #fff;
  margin-right: 5px;
  font-weight: bold;
}

.userInfo .info .sex {
  display: flex;
  align-items: center;
}

.userInfo .info image {
  width: 18px;
  height: 18px;
}

.userInfo .job {
  color: #fff;
  font-size: 14px;
}

.title {
  font-size: 20px;
}

.list {
  margin-top: 20px;
}

.list .item {
  display: flex;
  margin-bottom: 15px;
}

.list .item:last-child {
  margin-bottom: 0;
}

.list .item .key {
  width: 30%;
  color: #333333
}

.list .item .val {
  font-weight: bold;
}