.userInfo {
  position: absolute;
  width: 100%;
  top: 150rpx;
  margin: 60rpx 0;
}

.userInfo>view {
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.userInfo .left {
  display: flex;
  align-items: center;
}

.userInfo .right {
  display: flex;
  align-items: center;
  color: #fff;
}

.userInfo .right>view {
  margin-right: 30rpx;
  background: #8f8f8f;
  font-size: 13px;
  border-radius: 30rpx;
}

.userInfo .right>view:last-child {
  margin-right: 0;
}

.userInfo .right .fans {
  padding: 10rpx 40rpx;
  background: #1082ff;
  box-shadow: 5px 8px 8px rgba(16, 130, 255, .3);
  display: flex;
  align-items: center;
}

.userInfo .right .fans image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
}

.userInfo .right .message {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 13rpx;
  box-shadow: 5px 8px 8px rgba(143, 143, 143, .3);
}

.userInfo .right .message image {
  width: 30rpx;
  height: 30rpx;
}

.userInfo .left .info {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.userInfo .left .avatar {
  display: flex;
  align-items: center;
}

.container {
  background: #fff;
  padding: 30rpx;
  margin-top: -40rpx;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
}

.top-pic {
  width: 100%;
  height: 440rpx;
  position: relative;
  overflow: hidden;
  border-radius: 0 0 3% 3%;
  z-index: -1;
}

.top-pic image {
  width: 100%;
  height: 100%;
}

.userInfo .avatar image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.userInfo .info .name {
  color: #fff;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.userInfo .info .sex {
  display: flex;
  align-items: center;
}

.userInfo .info image {
  width: 18px;
  height: 18px;
}

.userInfo .job {
  color: #fff;
  font-size: 14px;
}

.moreInfo .fansInfo {
  display: flex;
  margin-bottom: 30rpx;
}

.moreInfo .fansInfo>view {
  margin-right: 30rpx;
  color: #747474;
  font-size: 14px;
}

.moreInfo .fansInfo>view>span {
  color: #1082ff;
  font-size: 20px;
  margin-right: 10rpx;
}

.moreInfo .departmentInfo {
  color: #747474;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.moreInfo .departmentInfo .more {
  display: flex;
  align-items: center;
}

.moreInfo .departmentInfo .more>view {
  display: flex;
  align-items: center;
}

.moreInfo .departmentInfo .more image {
  display: flex;
  align-items: center;
  width: 35rpx;
  height: 35rpx;
}

.dynamic .title {
  font-size: 16px;
  position: relative;
  padding-left: 20rpx;
}

.dynamic .title::after {
  content: '';
  position: absolute;
  bottom: 2.5px;
  left: 0;
  width: 4px;
  height: 15px;
  background: #1082ff;
  border-radius: 2px;
}

.list .item:first-child {
  margin-top: 15rpx;
}

.list .item {
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 15rpx;
}

.list .item:last-child {
  margin-bottom: 0;
}

.list .item .avatar {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.list .item .avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.list .item .head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.list .item .head .info {
  display: flex;
  align-items: center;
}

.list .item .head .info .name {
  font-size: 16px;
}

.list .item .head .info .date {
  font-size: 14px;
  color: rgba(0, 0, 0, .6);
}

.list .item .head .more image {
  height: 50rpx;
  width: 50rpx;
  margin-right: -10rpx;
}

.list .item .btns {
  display: flex;
  justify-content: space-between;
  margin: 0 10rpx;
  margin-top: 20rpx;
}

.list .item .btns>view {
  display: flex;
  align-items: center;
}

.list .item .btns>view view {
  font-size: 14px;
  color: rgba(0, 0, 0, .6);
}

.list .item .btns image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.list .item .fan {
  display: flex;
  align-items: center;
  font-size: 12px;
}

.list .item .fan image {
  width: 10px;
  height: 10px;
  margin-right: 3px;
}

.list .item .fan>view {
  background: #276EF9;
  color: #fff;
  padding: 3px 10px;
  border-radius: 10px;
}