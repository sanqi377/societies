page {
  background: #fff;
}

.container {
  margin: 15px;
}

.item {
  background: #f5f7f9;
  padding: 10px 15px;
  padding-bottom: 0;
  border-radius: 8px;
  margin-bottom: 20px;
}

.item:last-child {
  margin-bottom: 0;
}

.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15px;
}

.info .name {
  display: flex;
  align-items: center;
  font-size: 15px;
}

.info .date {
  font-size: 12px;
  color: rgba(0, 0, 0, .6);
}

.list .item .icon {
  background: #1082ff;
  border-radius: 50%;
  padding: 4px;
  margin-right: 10px;
}

.list .item .icon image {
  display: flex;
  align-items: center;
  width: 15px;
  height: 15px;
}

.dsc {
  color: rgba(0, 0, 0, .6);
  font-size: 14px;
  padding-bottom: 20px;
  border-bottom: 1px solid #ccc;
}

.detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  padding: 20px 0;
}

.detail image {
  width: 15px;
  height: 15px;
}