.container {
  position: relative;
  display: flex;
  height: 180px;
  align-items: flex-end;
}

.container .bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.container .bg image {
  width: 100%;
  height: 100%;
}

.content {
  margin: 0 15px;
  margin-bottom: 50px;
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.content .info {
  display: flex;
  align-items: center;
}

.content .avatar {
  margin-right: 10px;
}

.content .name {
  color: #fff;
}

.content .avatar image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.content .icon {
  display: flex;
  align-items: center;
}

.content .icon image {
  width: 22px;
  height: 22px;
}