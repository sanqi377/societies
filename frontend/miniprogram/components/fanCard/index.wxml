<view class="container">
  <scroll-view class="container" scroll-y style="height: 100%;">
    <view class="item" wx:for="{{info}}" wx:key="item" data-id="{{item.id}}" bindtap="goInfo">
      <view class="logo">
        <image src="{{item.logo}}" />
      </view>
      <view class="info">
        <view class="data">
          <view class="title">{{item.name}}</view>
          <view class="dsc">
            简介:
            <span>{{item.about}}</span>
          </view>
          <view class="social dsc">
            <view>
              动态:
              <span>2</span>
            </view>
            <view>
              成员:
              <span>{{item.number ? item.number : 0}}</span>
            </view>
          </view>
        </view>
        <view class="fan">
          <view>
            <image src="../../public/image/fan.png" />
            <span>关注</span>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>